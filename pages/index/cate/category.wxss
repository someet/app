.category-main{
	box-sizing: border-box;
	width: 100%;
	height: 100%;
}
.cate-child{
	
}
.left-menu{
	background: white;
}
.right-act{
	background:red;
}
.cate-item{
	display: inline-block;
	padding: 0.25rem;
	margin: 0.1rem;
	text-align: center;
	min-width: 4rem;
	position: relative;
}
.cate-item-selected::after{
	content:"";
	width:100%;
	height: 3px;
	position: absolute;
	bottom:0px;
	left:0;
	right:0;
	background-color: red;
	cursor: pointer;
}
.cate-img{
	position: relative;
}
.cate-img image{
	width: 100%;
}
.member-founder-tab{
	display: flex;
	width: 100%;
}
.member-founder-tab-item{
	width: 50%;
	box-sizing: border-box;
	background-color: white;
	text-align: center;
	height: 3rem;
}
.member-founder-tab-item text{
	display: block;
	width: 70%;
	height: 2.7rem;
	line-height: 1rem;
	margin: 0 auto;
	background-color: white;
	color:black;
	font-size: 1rem;
}
.member-founder-tab{
	box-shadow: 0px 2px 7px #808080;
}
.member-founder-tab-item-active{
	border-bottom: 8px solid red;
}
.history-text{
	height: 2rem;
	line-height: 2rem;
	text-align: center;
	color:white;
}
.founder-bottom-box{
	margin-bottom: 0.5rem;
}
.member-top-box-opration-status-flex{
	width: 100%;
	display: flex;
}
.member-top-box-opration-status-flex .answer-btn{
	width: 50%;
}
.member-top-box-opration-status-flex .answer-btn:nth-child(2){
	text-align: right;
}
.cate-name{
	position: absolute;
	color: white;
	left: 2rem;
	top: 2rem;
}