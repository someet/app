.tabBack {
	width: 100%;
	height: 3rem;
	color: white;
	z-index: 10;
	background-size: 100%;
	background-color: lightgray;
}

/* pages/searchif/searchif.wxss */
.search {
	width: 100%;
	display: flex;
}

.search input {
	border: 1px solid #ccc;
	border-radius: 0.5rem;
	height: 2.5rem;
	width: 75%;
	display: inline-block;
	padding-left: 5px;
	line-height: 2.7rem;
	margin: 3px;
	background-color: white;
	font-size: 0.8rem;
	color:black;
}

.btn {
	height: 2.5rem;
	width: 25%;
	line-height: 2.5rem;
	text-align: center;
	border: 1px solid white;
	margin: 3px;
	border-radius: 0.5rem;

}

.lists {
	text-align: center;
	margin-top: 20px;
	color: rgb(230, 124, 25);
}

.tab {
	float: left;
	width: 25%;
	text-align: center;
	padding: 10rpx 0;
}

.tabBorer {
	border-bottom: 1px solid #f00;
	color: #f00;
}

.activityList {
	width: 100%;
	text-align: center;
	position: relative;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: 0 50%;
	height: 233px;
}

.activityList-title {
	position: absolute;
	top: 35%;
	left: 15%;
	width: 70%;
	color: white;
}

.bottomView {
	height: 2rem;
	width: 100%;
}

.activityList-title-text {
	display: block;
	color: white;
	font-size: 1rem;
	font-weight: 400;
	width: 100%;
}
