.filter-box {
	width: 95%;
	margin: 0 auto;
	height: 100%;
}

.filter-tips,
.filter-tips-flex {
	font-size: 0.8rem;
	height: 2.5rem;
}

.filter-tips-fontsize {
	font-size: 1rem;
}

.filter-tips-flex {
	display: flex;
	box-sizing: border-box;
}

.filter-tips-flex view {
	width: 50%;
	height: 2.5rem;
	line-height: 2.5rem;
}

.filter-tips-view {
	margin-left: 8%;
}

.filter-tips-l {
	font-size: 1.1rem;
	padding-top: 1rem;
	padding-bottom: 1rem;
	color: blue;
}

.filter-tab {
	display: flex;
	width: 100%;
	box-sizing: border-box;
}

.filter-tab-item {
	width: calc(100% / 4);
	box-sizing: border-box;
	height: 2.5rem;
	line-height: 2.5rem;
	color: black;
	text-align: center;
}

.filter-tab-item-selected {
	color: red;
	border-bottom: 3px solid red;
}

.filter-answers {
	width: 98%;
	margin: 0 auto;
}

.credit-list {
	/*border: 1px solid #000;*/
	/*height: 3.5rem;*/
	width: 100%;
	border-radius: 0.3rem;
	margin-top: 0.4rem;
	padding: 0.5rem 0.1rem 0.5rem 0.5rem;
	border: 1px solid red;
	margin-bottom: 1rem;
}

.appeal_content {
	margin-top: 0.5rem;
}

.credit-page {
	padding: 5px;
	background-color: #fff;
	height: 100%;
	width: 100%;
}

.credit-img {
	height: 2rem;
	width: 2rem;
}

.credit-img image {
	height: 2rem;
	width: 2rem;
}

.credit-appeal {
	font-size: 0.6rem;
	/* line-height: 0.6rem; */
	vertical-align: middle;
	color: #f6303f;
	margin-left: 0.1rem;
	word-wrap: break-word;
}

.credit-appeal-btn {
	font-size: 0.7rem;
	text-align: center;
	line-height: 1.2rem;
	vertical-align: middle;
	color: #f6303f;
	margin-left: 0.1rem;
	border: 1px solid #f6303f;
	border-radius: 0.3rem;
	height: 1.2rem;
}

.credit-appeal a {
	color: #f6303f;
}

.credit-act-time {
	font-size: 0.6rem;
	color: #f6303f;
}

.appeal_card_num {
	margin-left: 3.5rem;
	/*margin-top: 0.5rem;*/
	font-size: 0.8rem;
}

.credit-tips {
	width: 100%;
	padding: 1rem;
	text-align: center;
}

.row {
	overflow: hidden;
	margin-left: 4%;
}

.row .col-20 {
	width: 20%;
	/* margin-left: 4%; */
	box-sizing: border-box;
	float: left;
}

.row .col-60 {
	width: 59%;
	/* margin-left: 4%; */
	box-sizing: border-box;
	float: left;
}

.filter-question text:first-child {
	display: block;
	font-size: 0.8rem;
	width: 98%;
	margin: 0 auto;
	color: gray;
	margin-top: 0.1rem;
}

.filter-question text:nth-child(2) {
	display: block;
	font-size: 0.8rem;
	width: 98%;
	margin: 0 auto;
	margin-top: 0.5rem;
}

.filter-answer-box {
	width: 100%;
	box-sizing: border-box;
	display: flex;
}

.filter-answer-box view {
	width: calc(100% / 2);
	line-height: 2.5rem;
	height: 2.5rem;
	color: white;
	/* background-color:red; */
	text-align: center;
	margin: 0.15rem;
}

.filter-answer-box view:first-child {
	background-color: #07c160;
}

.filter-answer-box view:nth-child(2) {
	background-color: red;
}
.filter-answer-box button {
	width: calc(100% / 2);
	line-height: 2.5rem;
	height: 2.5rem;
	color: white;
	/* background-color:red; */
	text-align: center;
	margin: 0.15rem;
}

.filter-answer-box button:first-child {
	background-color: #07c160;
}

.filter-answer-box button:nth-child(2) {
	background-color: red;
}

.info-index-line-small-filter {
	width: 98%;
	height: 1px;
	margin: 0 auto;
	background-color: gray;
	margin-top: 0.5rem;
	margin-bottom: 0.5rem;
}

.filter-reject-view {
	width: 100%;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
}

.filter-reject-view-form {
	width: 80%;
	/* height: 60%; */
	background: white;
	margin: 0 auto;
	margin-top: 20%;
}

.reject-content {
	/*padding: 2rem;*/
	background-color: #fff;
	/*margin-top: 20%;*/
	height: 100%;
	position: relative;
	line-height: 0.8rem;
	font-size: 0.8rem;
}

.reject-textarea {
	border: 1px solid black;
	width: 90%;
	height: 9rem;
	margin: 0 auto;
	margin-bottom: 2rem;
	padding: 0.5rem;
	border-radius: 0.5rem;
}
