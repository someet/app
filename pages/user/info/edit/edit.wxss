.map_friend_album_box_div{
    width: 100%;
    border-bottom: 4px solid #eee;
}
.map_friend_album_box image{
    height:100%;
    margin: 0.1rem;
}
.map_friend_album_box{
    width:100%;
    /* height:12.5rem; */
    display: flex;
    text-align: center;
}
.map_friend_album_box_left{
    /*width:60%;*/
    /*height:100%;
    */
    width: calc(100% / 3 * 2);
    overflow: hidden;
	margin: 2px;
}
.map_friend_album_box_right{
    width:40%;
    height: 100%;
    overflow: hidden;
	margin-right: 2px;
	width: calc(100% / 3);
}
.map_friend_album_box_right_small:first-child{
	margin-bottom: 2px;
	margin-top: 2px;
}
.map_friend_album_box_right_small{
    overflow: hidden;
	/* margin-top: 2px;
	margin-bottom: 2px;
	margin-right: 2px; */
}
.map_friend_album_box_tips{
    height:1.2rem;
    width: 100%;
    line-height: 1.2rem;
    text-align: center;
    color: #aaa;
    font-size: 0.6rem;
}

.go-answer{
	position: fixed;
	bottom: 0px;
	left:0px;
	width:100%;
	height: 3rem;
	text-align: center;
	line-height: 3rem;
	background-color:red;
	color:white;
	font-weight:800;
	display:flex;
}
.go-answer>button:after{
	border:0;
}
.answer-goback{
	width:35%;
	height:3rem;
	line-height:3rem;
	border-radius: 0;
	background-color: #bbb;
	color:white;
	font-size: 1rem;
}
.answer-goanswer{
	width:65%;
	height:3rem;
	line-height:3rem;
	color:white;
	background-color:red;
	border-radius:0;
	font-size: 1rem;
}
.map_friend_profile_box{
    width: 100%;
    /* height: 4rem; */
    display: flex;
}
.map_friend_profile_title{
    width: 100%;
    text-align: center;
}
.map_friend_profile_title > view{
    /*display: block;*/
    width: 100%;
    text-align: left;
    font-size: 0.8rem;
    padding-left: 1rem;
    display: flex;
}
.map_friend_profile_title_span{
    line-height: 1rem;
    font-size: 0.7rem;
    margin-top: 1rem;

}
.set_question{
    margin-top: 1rem;
    font-size: 0.75rem;
    color: red;
}
.map_friend_profile_icon{
    width: 20%;
    text-align: center;
    margin-right: 1rem;
}
.weight_text{
    font-weight: 700;
}
.map_friend_profile_icon_box image{
    width: 1rem;
    height:1rem;
    vertical-align:sub;
    margin-right:1rem;
}
.map_friend_profile_icon_box{
    font-size:0.7rem;
}
.map_friend_profile_title_content{
    display: block;
    width: 100%;
    text-align: left;
    /* font-size: 0.8rem; */
    margin-top: 1rem;
    margin-bottom: 1rem;
	font-size: 0.65rem;
	color:#bbb
}
.middle_show{
    align-items: center;
