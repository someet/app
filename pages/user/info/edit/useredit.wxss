.user_tags_content{
    width:100%;
    background: white;
    margin: 0 auto;
    padding-left: 3.5%;
    padding-right: 3.5%;
    background-position: center;
    background-size: cover;
}
.head_box_edit{
    width: 100%;
    height: 6.5rem;
    background: white;
    box-sizing: border-box;
}
.head_img_box{
    width: 80%;
    height: 5.5rem;
    margin: 0 auto;
    text-align: center;
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-bottom:1px solid #aaa;
}
.head_img_box view{
    display: block;
    font-size: 0.8rem;
    padding-top: 0.2rem;
    color:#aaa;
}
.head_img_box img{
    height: 4rem;
}
.user_edit_input{
