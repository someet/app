@import "../wxParse/wxParse.wxss";
.detail-poster{
	position:relative;
	width: 100%;
}
.detail-slide-image{
	width:100%;
}
.detail-slide-image-icon{
	width:2rem;
	vertical-align: sub;
	height: 2rem;
	margin-left:1rem;
}
.detail-poster-box{
	height: 2.5rem;
	position: absolute;
	bottom:4px;
	left:0px;
	width: 100%;
	background-image: url('http://img.someet.cc/phpTk7Hp1');
	background-size: cover;
	background-repeat: no-repeat;
}
.detail-slide-image-text{
	font-size: 1rem;
	display: inline-block;
	color:white;
	line-height: 2.5rem;
	height: 2.5rem;
	margin-left: 0.5rem;
}
.detail-poster-box-button{
	position: absolute;
	width: 50%;
	bottom: 0;
	right:0;
	height: 2.5rem;
}
.detail-poster-box-button-right{
	display: inline-block;
	margin: 0 auto;
	width: 50%;
	height: 2.5rem;
}
.detail-slide-image-collect{
	width:1.5rem;
	height: 1.5rem;
	margin-left:1rem;
	display: block;
	margin:0 auto;
}
.detail-slide-icon-text{
	display: block;
	font-size: 0.6rem;
	color:white;
	text-align: center;
}
.detail-title{
	width: 90%;
	text-align: center;
	color: black;
	margin: 0 auto;
}
.detail-title-text{
	display: block;
	font-size: 1rem;
	font-weight: 400;
}
.normal{
	font-size: 0.8rem;
	font-weight: 200;
}
.detail-line{
	height: 1px;
	width: 80%;
	background-color:#DDDDDD;
	margin: 0 auto;
	margin-top: 1rem;
	margin-bottom:1rem;
}
.detail-founder{
	width: 98%;
	margin: 0 auto;
	border-radius: 5px;
	box-shadow:0px 0px 10px 2px #666666;
	height: 10rem;
	margin-top: 1.5rem;
	margin-bottom: 1rem;
	border:1px solid lightgray;
}