page {
	font-size: 1rem;
	color: black;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	overflow-y: auto;
	overflow-x: hidden;
	box-sizing: border-box;
}

view {
	box-sizing: border-box;
}

form {
	width: 100%;
	display: block;
}

.content {
	height: 100%;
}

.info-index-line {
	width: 100%;
	height: 1px;
	background-color: gray;
	/* margin-bottom: 1rem; */
}

.info-index-line-small {
	width: 90%;
	height: 1px;
	margin: 0 auto;
	background-color: gray;
}

/**app.wxss**/
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 200rpx 0;
	box-sizing: border-box;
}


/* 个人中心和发起活动和报名的活动通用活动列表样式 */
.member-top-box-answer {
	color: #707070;
	font-size: 0.9rem;
	padding: 1rem;
	background-color: white;

}

.member-top-box-myanswers,
.member-top-box-opration-box {
	padding: 0.7rem;
}

.member-top-box-opration-btn {
	right: 1rem;
	background-color: #666666;
	color: white;
}

.member-top-box-scroll-answers {
	width: 100%;
	/* height: 6rem; */
	background: white;
	/* border:2px solid black; */
	/* display: flex; */
}

.member-top-box-scroll-answers-box {
	display: flex;
	padding: 0.7rem;
	color: black;
}

.member-top-box-poster {
	width: 4rem;
	height: 4rem;
}

.member-top-box-title {
	height: 4rem;
	padding-left: 0.8rem;
}

.member-top-box-title-name {
	height: 70%;
	overflow: hidden;
}

.member-top-box-title-time {
	font-size: 0.8rem;
}

.member-top-box-title text {
	display: block;
}

.member-top-box-opration-box {
	position: relative;
	height: 3rem;
}

.member-top-box-opration-box .member-top-box-opration-status,.member-top-box-opration-btn {
	width: 5rem;
	height: 2rem;
	line-height: 2rem;
	text-align: center;
	position: absolute;
}

.member-top-box-opration-status {
	left: 1rem;
	color: black;
}

/* 个人中心和发起活动和报名的活动通用活动列表样式结束 */
/* 个人标签的样式 */
view.size0 {
	display: inline-block;
	font-size: 1rem;
	height: 2rem;
	line-height: 2rem;
	box-sizing: border-box;
	padding-left: 0.6rem;
	padding-right: 0.6rem;
	background: rgb(241, 43, 54);
	color: white;
	width: auto;
	margin: 0.2rem;
	border-radius: 1.5rem;
	white-space: nowrap;
}

.middle_show {
	align-items: center;
	vertical-align: middle;
	display: inline-flex;
}

/* 个人标签的样式 */
.placehokderClass {
